<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @* @Scripts.Render("~/bundles/modernizr")*@
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-primary">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3"><i class="fas fa-user-md"></i> ESPECIALISTA</a>
     
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
  
        <ul class="navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Correo de Usuario</a></li>
               
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="@Url.Action("Index","Acceso")">Cerrar Sesion</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu" style="background-image: url('../../Img/images.png'); opacity: 1.2">
                    <div class="nav">

                        @*LOS REPORTE DEL ASILO*@
                        <div class="sb-sidenav-menu-heading text-black" style="background: #D4B505"  >AGENDA DEL ESPECIALISTA</div>
                        <a class="nav-link text-black" style="border: solid; background-color: burlywood" href="@Url.Action("HistorialEspacialista","Especialista")">
                            <div class="sb-nav-link-icon text-black"><i class="fas fa-calendar-alt text-black"></i></div>
                            <b>HISTORIAL</b> 
                        </a>

                        <div class="sb-sidenav-menu-heading text-black" style="background: #D4B505 "><b>MODULO DE ASIGNACION</b></div>

                        <a class="nav-link collapsed text-black" href="#" style="border: solid; background-color: burlywood" data-bs-toggle="collapse" data-bs-target="#collapsepersona" aria-expanded="false" aria-controls="collapsepersona">
                            <div class="sb-nav-link-icon"><i class="fas fa-plus text-black"></i></div>
                            <b>Examenes y Medicamentos</b>
                            <div class="sb-sidenav-collapse-arrow text-black"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" style="background: #393939" id="collapsepersona" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionPages">

                                <a class="nav-link text-white" href="@Url.Action("Index","Especialista")">
                                    <div class="sb-nav-link-icon text-white"><i class="fas fa-microscope"></i></div>
                                    ASIGNAR EXAMENES
                                </a>
                                <a class="nav-link text-white" href="@Url.Action("AsignarMedicina","Especialista")">
                                    <div class="sb-nav-link-icon text-white"><i class="fas fa-pills"></i></div>
                                    ASIGNAR MEDICAMENTOS
                                </a>

                            </nav>
                        </div>



                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Asilo:</div>
                    "Cabeza de Algodon"
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Davis Noe Lima 2022</div>
                        <div>
                            <a href="https://es.wikipedia.org/wiki/Mazatenango">Mazatenango, Suchitepequez</a>
                            &middot;
                            <a href="https://www.umg.edu.gt/">UMG &amp; UNIVERSIDAD MARIANO GALVEZ.</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @*<li>@Html.ActionLink("PACIENTES", "Index", "Home")</li>
        <li>@Html.ActionLink("MEDICO", "About", "Home")</li>
        <li>@Html.ActionLink("ENFERMEROS", "Contact", "Home")</li>
        <li>@Html.ActionLink("ESPECIALISTAS", "Prueba", "Home")</li>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
            </footer>
        </div>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/Complementos")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
    